# Kids Pixel Pals Environment Variables
# Copy this file to .env and update values for your environment

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/kids_pixel_pals

# Redis
REDIS_URL=redis://localhost:6379/0

# JWT Configuration
JWT_SECRET_KEY=change_this_in_production_with_secure_random_key_at_least_32_characters
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# Encryption (AES-256)
ENCRYPTION_KEY=change_this_32_byte_key_for_production_use_secure_random

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Environment
ENVIRONMENT=development
DEBUG=true

# Application
APP_NAME=Kids Pixel Pals
APP_VERSION=0.1.0

# For production, you should also set:
# - Secure database credentials
# - Proper Redis configuration
# - Real encryption keys
# - Production CORS origins
# - DEBUG=false